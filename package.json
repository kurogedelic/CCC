{
  "name": "ccc",
  "private": true,
  "version": "0.0.4",
  "type": "module",
  "description": "Claude Code Client - A modern web interface for Claude Code CLI",
  "author": "kurogedelic",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kurogedelic/CCC.git"
  },
  "homepage": "https://github.com/kurogedelic/CCC",
  "bugs": {
    "url": "https://github.com/kurogedelic/CCC/issues"
  },
  "scripts": {
    "dev": "vite",
    "dev:smart": "node start-dev.cjs",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "cap:sync": "cap sync",
    "cap:open:electron": "cap open @capacitor-community/electron",
    "server:build": "cd server && npx tsc",
    "server:dev": "cd server && npm run dev",
    "server:start": "cd server && node dist/index.js",
    "dev:full": "concurrently \"npm run server:dev\" \"npm run dev\"",
    "electron:dev": "concurrently \"npm run dev:full\" \"npm run electron:watch\"",
    "electron:watch": "cd electron && npm run dev",
    "electron:build": "npm run build && cap sync @capacitor-community/electron && cd electron && npm run build",
    "electron:start": "cd electron && npm start"
  },
  "dependencies": {
    "@capacitor/core": "^5.0.0",
    "@phosphor-icons/react": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@capacitor-community/electron": "^5.0.1",
    "@capacitor/cli": "^5.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.1.2",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  }
}
